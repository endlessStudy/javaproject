<?xml version="1.0" encoding="UTF-8" ?>  
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.itcast.core.dao.product.FeatureDao">
	<resultMap id="feature" type="Feature">
		<result property="id" column="id" />
		<result property="name" column="name" />
		<result property="value" column="value" />
		<result property="sort" column="sort" />
		<result property="isDel" column="is_del" />
	</resultMap>
	<!-- Select SQL -->
	<sql id="featureSelector">
		SELECT
			<if test="fields != null">
				${fields}
			</if>
			<if test="fields == null">
			id,name,value,sort,is_del
			</if>
		FROM bbs_feature
	</sql>
	<sql id="featureListWhere">
		<where>
				<if test="id != null">
					and id=#{id}
				</if>
				<if test="name != null">
				<if test="nameLike == false">
					and name=#{name}
				</if>
				<if test="nameLike == true">
					and  name like "%"#{name}"%"
				</if>
				</if>
				<if test="value != null">
				<if test="valueLike == false">
					and value=#{value}
				</if>
				<if test="valueLike == true">
					and  value like "%"#{value}"%"
				</if>
				</if>
				<if test="sort != null">
					and sort=#{sort}
				</if>
				<if test="isDel != null">
					and is_del=#{isDel}
				</if>
		</where>
	</sql>

	<sql id="featureListOrder">
		<if test="orderFields != null and orderFields.size >0">
		order by 
			<foreach collection="orderFields" separator="," item="orderField">
				${orderField.fieldName} ${orderField.order}
			</foreach>
		</if>
	</sql>

	<sql id="featureListLimit">
		<if test="startRow != null">
			limit #{startRow},#{pageSize}
		</if>
	</sql>

	<!-- 根据主键查询 -->
	<select id="getFeatureByKey" resultMap="feature" parameterType="hashMap">
		SELECT id,name,value,sort,is_del FROM bbs_feature
		WHERE
		id=#{id}
	</select>
	<select id="getFeaturesByKeys" resultMap="feature" parameterType="ArrayList">
		SELECT id,name,value,sort,is_del FROM bbs_feature
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</select>

	<!-- 根据主键删除 -->
	<delete id="deleteByKey" parameterType="hashMap">
		DELETE FROM bbs_feature
		WHERE
		id=#{id}
	</delete>

	<!-- 根据主键批量删除 -->
	<delete id="deleteByKeys">
		DELETE FROM bbs_feature
		WHERE
		id in
		<foreach collection="list" separator="," item="id" open="(" close=")">
			#{id}
		</foreach>
	</delete>

	<!-- 根据主键更新 -->
	<update id="updateFeatureByKey" parameterType="Feature">
		UPDATE bbs_feature
		<set>
			<trim suffixOverrides=",">
				<if test="id != null">
					id = #{id},
				</if>
				<if test="name != null">
					name = #{name},
				</if>
				<if test="value != null">
					value = #{value},
				</if>
				<if test="sort != null">
					sort = #{sort},
				</if>
				<if test="isDel != null">
					is_del = #{isDel}
				</if>
			</trim>
		</set>
		WHERE
		id=#{id}
	</update>
	<!-- 分页 -->
	<select id="getFeatureListWithPage" parameterType="FeatureQuery" resultMap="feature">
		<include refid="featureSelector" />
		<include refid="featureListWhere" />
		<include refid="featureListOrder" />
		<include refid="featureListLimit" />
	</select>
	<!-- 数据总数 -->
	<select id="getFeatureListCount" parameterType="FeatureQuery" resultType="int">
		SELECT count(1) FROM bbs_feature
		<include refid="featureListWhere" />
	</select>
	<!-- 数据集合 -->
	<select id="getFeatureList" parameterType="FeatureQuery" resultMap="feature">
		<include refid="featureSelector" />
		<include refid="featureListWhere" />
		<include refid="featureListOrder" />
	</select>
	<!-- 添加 -->
	<insert id="addFeature" parameterType="Feature">
		INSERT INTO bbs_feature
		<trim prefix="(" suffix=")" suffixOverrides=",">
				<if test="id != null">
					id,
				</if>
				<if test="name != null">
					name,
				</if>
				<if test="value != null">
					value,
				</if>
				<if test="sort != null">
					sort,
				</if>
					<if test="isDel != null">
						is_del
					</if>
		</trim>
		VALUES
		<trim prefix="(" suffix=")" suffixOverrides=",">
					<if test="id != null">
						#{id},
					</if>
					<if test="name != null">
						#{name},
					</if>
					<if test="value != null">
						#{value},
					</if>
					<if test="sort != null">
						#{sort},
					</if>
					<if test="isDel != null">
						#{isDel}
					</if>
		</trim>
	</insert>
</mapper>
