<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lyl.mapper.CityMapper">
    <resultMap id="cityMap" type="com.lyl.pojo.City">
        <id column="id" jdbcType="INTEGER" property="id"/>
        <result column="province_id" jdbcType="INTEGER" property="code"/>
        <result column="city_name" jdbcType="VARCHAR" property="name"/>
        <result column="description" jdbcType="VARCHAR" property="description"/>
    </resultMap>
    <select id="queryCity" resultMap="cityMap" >
        SELECT id,province_id,city_name,description FROM city
    </select>
</mapper>